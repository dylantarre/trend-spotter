{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express",
      "better-sqlite3",
      "node-schedule"
    ]
  },
  "include": ["src/**/*", "../src/**/*"],
  "exclude": ["node_modules"]
} 